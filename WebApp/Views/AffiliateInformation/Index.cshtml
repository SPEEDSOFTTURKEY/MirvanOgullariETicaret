@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_LayoutWebUITheme.cshtml";
}

<ul class="breadcrumb">
	<li>
		<a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i></a>
	</li>
	<li><a href="@Url.Action("Index","Account")">Hesabım</a></li>
	<li>
		<a href="@Url.Action("Index","AffiliateInformation")">Ortaklık</a>
	</li>
</ul>

<h1 class="title page-title"><span>Ortaklık Bilgileriniz</span></h1>

<div id="account-affiliate" class="container">
	<div class="row">
		<div id="content" class="col-sm-9">

			<form action="https://www.tilsimbaby.com/index.php?route=account/affiliate/add" method="post" enctype="multipart/form-data" class="form-horizontal">
				<fieldset>
					<legend>Ortaklık Hesabım</legend>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-company">Şirket Adı</label>
						<div class="col-sm-10">
							<input type="text" name="company" value="" placeholder="Şirket Adı" id="input-company" class="form-control" />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-website">Web Siteniz</label>
						<div class="col-sm-10">
							<input type="text" name="website" value="" placeholder="Web Siteniz" id="input-website" class="form-control" />
						</div>
					</div>
				</fieldset>
				<fieldset>
					<legend>Ödeme Bilgileri</legend>
					<div class="form-group">
						<label class="col-sm-2 control-label" for="input-tax">T.C. / Vergi No</label>
						<div class="col-sm-10">
							<input type="text" name="tax" value="" placeholder="T.C. / Vergi No" id="input-tax" class="form-control" />
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-2 control-label">Ödeme Methodu</label>
						<div class="col-sm-10">
							<div class="radio">
								<label>
									<input type="radio" name="payment" value="cheque" checked="checked" />
									Çek
								</label>
							</div>
							<div class="radio">
								<label>
									<input type="radio" name="payment" value="paypal" />
									PayPal
								</label>
							</div>
							<div class="radio">
								<label>
									<input type="radio" name="payment" value="bank" />
									Havale / EFT
								</label>
							</div>
						</div>
					</div>
					<div class="form-group payment" id="payment-cheque">
						<label class="col-sm-2 control-label" for="input-cheque">Alacaklı Adı</label>
						<div class="col-sm-10">
							<input type="text" name="cheque" value="" placeholder="Alacaklı Adı" id="input-cheque" class="form-control" />

						</div>
					</div>
					<div class="form-group payment" id="payment-paypal">
						<label class="col-sm-2 control-label" for="input-paypal">PayPal E-Posta Adresi</label>
						<div class="col-sm-10">
							<input type="text" name="paypal" value="" placeholder="PayPal E-Posta Adresi" id="input-paypal" class="form-control" />
						</div>
					</div>
					<div class="payment" id="payment-bank">
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-bank-name">Banka Adı</label>
							<div class="col-sm-10">
								<input type="text" name="bank_name" value="" placeholder="Banka Adı" id="input-bank-name" class="form-control" />
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-bank-branch-number">Şube Numarası</label>
							<div class="col-sm-10">
								<input type="text" name="bank_branch_number" value="" placeholder="Şube Numarası" id="input-bank-branch-number" class="form-control" />
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-bank-swift-code">SWIFT Kodu</label>
							<div class="col-sm-10">
								<input type="text" name="bank_swift_code" value="" placeholder="SWIFT Kodu" id="input-bank-swift-code" class="form-control" />
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-bank-account-name">Hesap Adı</label>
							<div class="col-sm-10">
								<input type="text" name="bank_account_name" value="" placeholder="Hesap Adı" id="input-bank-account-name" class="form-control" />

							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-2 control-label" for="input-bank-account-number">Hesap Numarası</label>
							<div class="col-sm-10">
								<input type="text" name="bank_account_number" value="" placeholder="Hesap Numarası" id="input-bank-account-number" class="form-control" />

							</div>
						</div>
					</div>

				</fieldset>

				<div class="buttons clearfix">
					<div class="pull-right">
						<a href="@Url.Action("Index","About")" target="_blank"><b>Hakkımızda</b></a>'nı okudum ve kabul ediyorum
						<input type="checkbox" name="agree" value="1" />
						&nbsp;
						<button type="submit" class="btn btn-primary"><span>Devam</span></button>
					</div>
				</div>
			</form>
		</div>
		@Html.Partial("_AccountSidebar")
	</div>
</div>