@{
    ViewData["Title"] = "Ürün Bilgileri Ekle";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .modern-wrapper {
        padding: 20px;
    }

    .modern-form-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        margin-top: 20px;
    }

        .modern-form-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .form-panel-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-panel-content {
        padding: 30px;
    }

    .form-group-modern {
        margin-bottom: 25px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .control-label-modern {
        font-weight: 600;
        color: #4a5568;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: block;
    }

    .btn-group-modern {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
        margin-top: 30px;
    }

    .btn-modern-form {
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        font-size: 15px;
    }

    .btn-cancel {
        background: #718096;
        color: white;
    }

        .btn-cancel:hover {
            background: #4a5568;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(113, 128, 150, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .form-control-modern {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
        color: #000;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-col {
        flex: 1;
        min-width: 250px;
    }

    .checkbox-group {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
    }

    .checkbox-label {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 14px;
        color: #4a5568;
    }

        .checkbox-label input {
            width: 15px;
            height: 15px;
            cursor: pointer;
        }

    .icon-left {
        margin-right: 8px;
    }

    .ck-editor__editable {
        min-height: 150px;
    }

    media (max-width: 768px) {
        .form-panel-content

    {
        padding: 20px;
    }

    .form-row {
        flex-direction: column;
        gap: 10px;
    }

    .form-col {
        min-width: 100%;
    }

    .btn-group-modern {
        flex-direction: column-reverse;
    }

    .btn-modern-form {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<section class="modern-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="modern-form-panel">
                <div class="form-panel-header">
                    <i class="fa fa-plus-circle"></i>
                    <span>Yeni Ürün Ekle</span>
                </div>
                <div class="form-panel-content">
                    <div class="form-row">
                        <div class="form-col">
                            <div class="form-group-modern">
                                <label class="control-label-modern">Ürün Ana Kategori</label>
                                <select id="AnaKategoriId" class="form-control-modern" name="UrunAnaKategoriId">
                                    <option value="">Bir Ana Kategori Seçiniz</option>
                                    @if (ViewBag.UrunAnaKategoriListesi != null)
                                    {
                                        foreach (var item in ViewBag.UrunAnaKategoriListesi)
                                        {
                                            <option value="@item.Id">@item.Adi</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group-modern">
                                <label class="control-label-modern">Ürün Tipi</label>
                                <select id="altkategori" class="form-control-modern" name="UrunAltKategoriId">
                                    <option value="">Bir Alt Kategori Seçiniz</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-col">
                            <div class="form-group-modern">
                                <label class="control-label-modern">Ürün Adı</label>
                                <input type="text" id="Adi" name="Adi" class="form-control-modern" placeholder="Ürün Adı" required />
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group-modern">
                                <label class="control-label-modern">Ürün Renk</label>
                                <select id="RenkId" class="form-control-modern" name="RenkId">
                                    <option value="">Renk Seçiniz</option>
                                    @if (ViewBag.RenkListesi != null)
                                    {
                                        foreach (var item in ViewBag.RenkListesi)
                                        {
                                            <option value="@item.Id">@item.Adi</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-col">
                            <div class="form-group-modern">
                                <label class="control-label-modern">Fiyat</label>
                                <input type="text" id="Fiyat" name="Fiyat" class="form-control-modern price-mask" placeholder="Fiyat (örn. 1,234.56)" required />
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group-modern">
                                <label class="control-label-modern">İndirim Yüzdesi (İsteğe Bağlı)</label>
                                <input type="text" id="IndirimYuzdesi" name="IndirimYuzdesi" class="form-control-modern" placeholder="İndirim Yüzdesi (örn. 10)" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group-modern">
                        <label class="control-label-modern">Bedenler</label>
                        <div class="checkbox-group">
                            @if (ViewBag.BedenListesi != null)
                            {
                                foreach (var beden in ViewBag.BedenListesi)
                                {
                                    <label class="checkbox-label">
                                        <input type="checkbox" name="bedenIds" value="@beden.Id" /> @beden.Adi
                                    </label>
                                }
                            }
                        </div>
                    </div>
                    <div class="form-group-modern">
                        <label class="control-label-modern">Açıklama (İsteğe Bağlı)</label>
                        <textarea class="form-control-modern" id="Aciklama" name="Aciklama" rows="4"></textarea>
                    </div>
                    <div class="form-group-modern">
                        <label class="control-label-modern">Özellikler (İsteğe Bağlı)</label>
                        <textarea class="form-control-modern" id="Ozellikler" name="Ozellikler" rows="4"></textarea>
                    </div>
                    <div class="btn-group-modern">
                        <a href="@Url.Action("Index", "AdminUrunBilgileri")" class="btn-modern-form btn-cancel">
                            <i class="fa fa-times icon-left"></i>
                            <span>İptal</span>
                        </a>
                        <button type="button" id="btnKaydet" class="btn-modern-form btn-save">
                            <i class="fa fa-check icon-left"></i>
                            <span>Kaydet</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            let selectedBedenler = [];

            // Apply mask to price input
            $('.price-mask').mask('#,##0.00', { reverse: true });

            $("#AnaKategoriId").change(function () {
                var anaKategoriId = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetirAltKategori", "AdminUrunBilgileriEkle")',
                    type: 'POST',
                    data: { AnaKategoriId: anaKategoriId },
                    success: function (result) {
                        var altKategoriSelect = $("#altkategori");
                        altKategoriSelect.empty();
                        altKategoriSelect.append($('<option/>', {
                            value: "",
                            text: "Bir Alt Kategori Seçiniz"
                        }));
                        result.forEach(function (item) {
                            altKategoriSelect.append($('<option/>', {
                                value: item.id,
                                text: item.adi
                            }));
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Hata oluştu: " + error);
                        alert("Kategoriler yüklenirken bir hata oluştu.");
                    }
                });
            });

            $('input[type="checkbox"]').change(function () {
                if ($(this).is(':checked')) {
                    var value = $(this).val();
                    if (!selectedBedenler.includes(value)) {
                        selectedBedenler.push(value);
                    }
                } else {
                    var value = $(this).val();
                    var index = selectedBedenler.indexOf(value);
                    if (index !== -1) {
                        selectedBedenler.splice(index, 1);
                    }
                }
            });

            $("#btnKaydet").click(function () {
                var anakategoriId = $("#AnaKategoriId").val();
                var altkategoriId = $("#altkategori").val();
                var adi = $("#Adi").val();
                var renkId = $("#RenkId").val();
                var fiyat = $("#Fiyat").val();
                var aciklama = $("#Aciklama").val();
                var ozellikler = $("#Ozellikler").val();
                var indirimYuzdesi = $("#IndirimYuzdesi").val();

                // Remove mask characters from price
                var cleanFiyat = fiyat.replace(/,/g, '');

                // Validation
                if (!anakategoriId) {
                    alert("Lütfen bir ana kategori seçiniz.");
                    return;
                }
                if (!altkategoriId) {
                    alert("Lütfen bir alt kategori seçiniz.");
                    return;
                }
                if (!adi.trim()) {
                    alert("Lütfen ürün adını doldurunuz.");
                    return;
                }
                if (!cleanFiyat.trim() || isNaN(cleanFiyat) || parseFloat(cleanFiyat) <= 0) {
                    alert("Lütfen geçerli bir fiyat giriniz.");
                    return;
                }
                if (selectedBedenler.length === 0) {
                    alert("Lütfen en az bir beden seçiniz.");
                    return;
                }

                // Handle IndirimYuzdesi: default to 0 if empty or invalid
                var indirim = 0;
                if (indirimYuzdesi.trim() && !isNaN(indirimYuzdesi) && parseFloat(indirimYuzdesi) >= 0) {
                    indirim = parseFloat(indirimYuzdesi);
                }

                var urun = {
                    Adi: adi,
                    Fiyat: parseFloat(cleanFiyat),
                    IndirimYuzdesi: indirim,
                    Aciklama: aciklama || null,
                    Ozellikler: ozellikler || null,
                    RenkId: renkId || null,
                    UrunAnaKategoriId: anakategoriId,
                    UrunAltKategoriId: altkategoriId
                };

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Kaydet", "AdminUrunBilgileriEkle")',
                    data: { urun: urun, bedenIds: selectedBedenler },
                    success: function (result) {
                        window.location.href = "/AdminUrunBilgileri/Index";
                    },
                    error: function (xhr, status, error) {
                        console.error("Hata oluştu: " + error);
                        alert("Ürün kaydedilirken bir hata oluştu.");
                    }
                });
            });
        });
    </script>
}