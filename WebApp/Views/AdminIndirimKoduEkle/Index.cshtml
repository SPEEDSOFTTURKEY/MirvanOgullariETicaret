@{
    ViewData["Title"] = "İndirim Kodu Ekle";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .modern-wrapper {
        padding: 20px;
    }

    .modern-form-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        margin-top: 20px;
    }

        .modern-form-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .form-panel-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 30px;
    }

    .form-panel-content {
        padding: 30px;
    }

    .form-group-modern {
        margin-bottom: 25px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .control-label-modern {
        font-weight: 600;
        color: #4a5568;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: block;
    }

    .btn-group-modern {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
        margin-top: 30px;
    }

    .btn-modern-form {
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        font-size: 15px;
    }

    .btn-cancel {
        background: #718096;
        color: white;
    }

        .btn-cancel:hover {
            background: #4a5568;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(113, 128, 150, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .form-control-modern {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
        color: #000;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .input-group-modern {
        position: relative;
        display: flex;
        align-items: center;
    }

        .input-group-modern .currency-symbol {
            position: absolute;
            right: 12px;
            color: #718096;
            font-size: 14px;
            pointer-events: none;
        }

        .input-group-modern .percentage-symbol {
            position: absolute;
            right: 12px;
            color: #718096;
            font-size: 14px;
            pointer-events: none;
        }

    .icon-left {
        margin-right: 8px;
    }

    media (max-width: 768px) {
        .form-panel-content

    {
        padding: 20px;
    }

    .form-group-modern {
        padding: 15px;
    }

    .btn-group-modern {
        flex-direction: column-reverse;
    }

    .btn-modern-form {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<section class="modern-wrapper">
    <div class="row">
        <div class="col-md-6">
            <div class="modern-form-panel">
                <div class="form-panel-header">
                    <i class="fa fa-plus-circle"></i>
                    <span>İndirim Kodu Ekle</span>
                </div>
                <div class="form-panel-content">
                    <form id="addForm" action="@Url.Action("Kaydet", "AdminIndirimKoduEkle")" method="post">
                        <div class="form-group-modern">
                            <label class="control-label-modern">İndirim Kodu</label>
                            <input type="text" class="form-control-modern" name="Kodu" id="Kodu" placeholder="Örn: YAZ2025" />
                        </div>
                        <div class="form-group-modern">
                            <label class="control-label-modern">Alt Limit</label>
                            <div class="input-group-modern">
                                <input type="number" step="0.01" min="0" class="form-control-modern" name="AltLimit" id="AltLimit" placeholder="0.00" />
                                <span class="currency-symbol">₺</span>
                            </div>
                        </div>
                        <div class="form-group-modern">
                            <label class="control-label-modern">İndirim Oranı (%)</label>
                            <div class="input-group-modern">
                                <input type="number" step="0.01" min="0" max="100" class="form-control-modern" name="Orani" id="Orani" placeholder="0.00" />
                                <span class="percentage-symbol">%</span>
                            </div>
                        </div>
                        <div class="form-group-modern">
                            <label class="control-label-modern">Başlangıç Tarihi</label>
                            <input type="date" class="form-control-modern" name="BaslangicTarihi" id="BaslangicTarihi" />
                        </div>
                        <div class="form-group-modern">
                            <label class="control-label-modern">Bitiş Tarihi</label>
                            <input type="date" class="form-control-modern" name="BitisTarihi" id="BitisTarihi" />
                        </div>
                        <div class="btn-group-modern">
                            <a href="@Url.Action("Index", "AdminIndirimKodu")" class="btn-modern-form btn-cancel">
                                <i class="fa fa-times icon-left"></i>
                                <span>İptal</span>
                            </a>
                            <button type="button" id="btnKaydet" class="btn-modern-form btn-save">
                                <i class="fa fa-check icon-left"></i>
                                <span>Kaydet</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script {
    <script>
        $(document).ready(function () {
            $("#btnKaydet").click(function () {
                var kodu = $("#Kodu").val().trim();
                var altLimit = parseFloat($("#AltLimit").val());
                var orani = parseFloat($("#Orani").val());
                var baslangicTarihi = $("#BaslangicTarihi").val();
                var bitisTarihi = $("#BitisTarihi").val();

                if (!kodu) {
                    alert("Lütfen indirim kodu giriniz.");
                    return;
                }
                if (isNaN(altLimit) || altLimit < 0) {
                    alert("Lütfen geçerli bir alt limit giriniz (sıfır veya pozitif).");
                    return;
                }
                if (isNaN(orani) || orani <= 0 || orani > 100) {
                    alert("Lütfen geçerli bir indirim oranı giriniz (0-100 arası).");
                    return;
                }
                if (!baslangicTarihi) {
                    alert("Lütfen başlangıç tarihi seçiniz.");
                    return;
                }
                if (!bitisTarihi) {
                    alert("Lütfen bitiş tarihi seçiniz.");
                    return;
                }
                var startDate = new Date(baslangicTarihi);
                var endDate = new Date(bitisTarihi);
                var today = new Date();
                today.setHours(0, 0, 0, 0); // Reset time for comparison
                if (startDate > endDate) {
                    alert("Başlangıç tarihi, bitiş tarihinden sonra olamaz.");
                    return;
                }

                $("#addForm").submit();
            });
        });
    </script>
}