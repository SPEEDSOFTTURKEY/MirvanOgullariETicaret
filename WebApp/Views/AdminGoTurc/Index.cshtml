@section Script {
    <script>
        $(document).ready(function () {
            if ($.fn.DataTable && $('#TblVeriler').length > 0) {
                $('#TblVeriler').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    },
                    "pageLength": 10,
                    "order": [[0, "desc"]],
                    "responsive": true,
                    "bDestroy": true
                });
            }

            $('#addProductModal').on('show.bs.modal', function () {
                clearAddForm();
                loadGoTurcCategories();
                loadGoTurcBrands();
                loadGoTurcDeliveryMethods();
            });

            $('#updateProductModal').on('show.bs.modal', function () {
                loadGoTurcCategories();
                loadGoTurcBrands();
