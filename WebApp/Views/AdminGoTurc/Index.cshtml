<section class="modern-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="modern-panel">
                <div class="panel-header">
                    <i class="fa fa-shopping-cart"></i>
                    <span>GoTurc Ürünleri</span>
                    <button class="btn-modern" data-toggle="modal" data-target="#addProductModal">
                        <i class="fa fa-plus"></i>
                        <span>Ürün Ekle</span>
                    </button>
                </div>
                <div class="panel-content">
                    @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
                    {
                        <div class="table-container">
                            <table class="table modern-table" id="TblVeriler">
                                <thead>
                                    <tr>
                                        <th>Ürün Adı</th>
                                        <th>Mağaza Kodu</th>
                                        <th>Kategori</th>
                                        <th>Marka</th>
                                        <th>Fiyat</th>
                                        <th>Stok</th>
                                        <th>Durum</th>
                                        <th style="text-align: center;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in ViewBag.Products)
                                    {
                                        var goTurcProduct = product as GoTurcProduct;
                                        var categories = ViewBag.Categories as List<GoTurcCategory>;
                                        var brands = ViewBag.Brands as List<GoTurcBrand>;

                                        var category = categories?.FirstOrDefault(c => c.Id == goTurcProduct.CategoryId);
                                        var brand = brands?.FirstOrDefault(b => b.Id == goTurcProduct.BrandId);

                                        <tr data-product='@JsonConvert.SerializeObject(goTurcProduct)'>
                                            <td class="content-text">@goTurcProduct.Title</td>
                                            <td class="content-text">@goTurcProduct.ShopProductCode</td>
                                            <td class="content-text">@(category?.Name ?? "Bilinmiyor")</td>
                                            <td class="content-text">@(brand?.Name ?? "Bilinmiyor")</td>
                                            <td class="content-text">@goTurcProduct.Price.ToString("C", CultureInfo.GetCultureInfo("tr-TR"))</td>
                                            <td class="content-text">@goTurcProduct.StockQuantity</td>
                                            <td class="content-text">@goTurcProduct.Status</td>
                                            <td style="text-align: center;">
                                                <button class="btn-action btn-action-update" onclick="openUpdateModal('@goTurcProduct.ShopProductCode', this)">
                                                    <i class="fa fa-edit"></i>
                                                    <span>Güncelle</span>
                                                </button>
                                                <button class="btn-action btn-action-update" onclick="openStockPriceUpdateModal('@goTurcProduct.ShopProductCode', this)">
                                                    <i class="fa fa-dollar-sign"></i>
                                                    <span>Stok/Fiyat</span>
                                                </button>
                                                <a class="btn-action btn-action-delete" href="/AdminGoTurc/DeleteGoTurcProduct?shopProductCode=@goTurcProduct.ShopProductCode&pazarYeriId=@ViewBag.PazarYeriId"
                                                   onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?');">
                                                    <i class="fa fa-trash"></i>
                                                    <span>Sil</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fa fa-shopping-cart"></i>
                            <h4>Henüz ürün bulunamadı</h4>
                            <p>Ürün eklemek için "Ürün Ekle" butonunu kullanabilirsiniz.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
