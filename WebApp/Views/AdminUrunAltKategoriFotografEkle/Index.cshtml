@{
    ViewData["Title"] = "Ürün Alt Kategori Resim Ekle";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .modern-wrapper {
        padding: 20px;
    }

    .modern-form-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        margin-top: 20px;
    }

        .modern-form-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .form-panel-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 30px;
    }

    .form-panel-content {
        padding: 30px;
    }

    .form-group-modern {
        margin-bottom: 25px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .control-label-modern {
        font-weight: 600;
        color: #4a5568;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: block;
    }

    .btn-group-modern {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
        margin-top: 30px;
    }

    .btn-modern-form {
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        font-size: 15px;
    }

    .btn-cancel {
        background: #718096;
        color: white;
    }

        .btn-cancel:hover {
            background: #4a5568;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(113, 128, 150, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .form-control-modern {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
        color: #000;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .file-upload-group {
        display: flex;
        flex-direction: column;
        gap: 10px;
        margin-top: 10px;
    }

    .file-upload-preview {
        width: 100%;
        max-width: 400px;
        height: 200px;
        border: 2px dashed #e2e8f0;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f8f9fa;
        overflow: hidden;
        margin-bottom: 10px;
    }

        .file-upload-preview img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .file-upload-preview.empty::before {
            content: 'Önizleme Yok';
            color: #718096;
            font-size: 14px;
        }

    .btn-file {
        background: #48bb78;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-file:hover {
            background: #38a169;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
        }

    .btn-file-remove {
        background: #f56565;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-file-remove:hover {
            background: #e53e3e;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 101, 101, 0.3);
        }

    .icon-left {
        margin-right: 8px;
    }

    media (max-width: 768px) {
        .form-panel-content

    {
        padding: 20px;
    }

    .form-group-modern {
        padding: 15px;
    }

    .btn-group-modern {
        flex-direction: column-reverse;
    }

    .btn-modern-form {
        width: 100%;
        justify-content: center;
    }

    .file-upload-preview {
        max-width: 100%;
        height: 150px;
    }

    }
</style>

<section class="modern-wrapper">
    <div class="row">
        <div class="col-md-8">
            <div class="modern-form-panel">
                <div class="form-panel-header">
                    <i class="fa fa-plus-circle"></i>
                    <span>Resim Ekle</span>
                </div>
                <div class="form-panel-content">
                    <form id="addForm" action="@Url.Action("Kaydet", "AdminUrunAltKategoriFotografEkle")" method="post" enctype="multipart/form-data">
                        <div class="form-group-modern">
                            <label class="control-label-modern">Ürün Alt Kategori</label>
                            <select id="UrunAltKategoriId" class="form-control-modern" name="UrunAltKategoriId">
                                <option value="">Kategori Seçin</option>
                                @if (ViewBag.UrunAltKategori != null)
                                {
                                    foreach (var item in ViewBag.UrunAltKategori)
                                    {
                                        <option value="@item.Id">@item.Adi</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group-modern">
                            <label class="control-label-modern">Resim Yükle (Birden Fazla Seçilebilir)</label>
                            <div class="file-upload-group">
                                <div class="file-upload-preview empty" id="imagePreview"></div>
                                <label class="btn-file">
                                    <i class="fa fa-upload icon-left"></i>
                                    <span>Resim Seç</span>
                                    <input type="file" name="imagefile" multiple accept="image/*" style="display: none;" onchange="previewFiles(this, 'imagePreview')" />
                                </label>
                                <button type="button" class="btn-file-remove" onclick="clearPreview('imagePreview')" style="display: none;" id="imageRemove">
                                    <i class="fa fa-trash icon-left"></i>
                                    <span>Kaldır</span>
                                </button>
                            </div>
                        </div>
                        <div class="btn-group-modern">
                            <a href="@Url.Action("Index", "AdminUrunAltKategoriFotograf")" class="btn-modern-form btn-cancel">
                                <i class="fa fa-times icon-left"></i>
                                <span>İptal</span>
                            </a>
                            <button type="button" id="btnKaydet" class="btn-modern-form btn-save">
                                <i class="fa fa-check icon-left"></i>
                                <span>Kaydet</span>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script {
    <script>
        $(document).ready(function () {
            $("#btnKaydet").click(function () {
                var urunAltKategoriId = $("#UrunAltKategoriId").val();
                var files = $("input[name='imagefile']")[0].files;

                if (!urunAltKategoriId) {
                    alert("Lütfen bir alt kategori seçiniz.");
                    return;
                }
                if (files.length === 0) {
                    alert("Lütfen en az bir resim seçiniz.");
                    return;
                }

                $("#addForm").submit();
            });
        });

        function previewFiles(input, previewId) {
            const preview = document.getElementById(previewId);
            const removeBtn = document.getElementById('imageRemove');
            preview.innerHTML = '';
            preview.classList.remove('empty');

            if (input.files && input.files.length > 0) {
                for (let i = 0; i < input.files.length; i++) {
                    const file = input.files[i];
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        preview.appendChild(img);
                    };

                    reader.readAsDataURL(file);
                }
                removeBtn.style.display = 'inline-flex';
            } else {
                preview.classList.add('empty');
                removeBtn.style.display = 'none';
            }
        }

        function clearPreview(previewId) {
            const preview = document.getElementById(previewId);
            const input = document.querySelector('input[name="imagefile"]');
            const removeBtn = document.getElementById('imageRemove');

            preview.innerHTML = '';
            preview.classList.add('empty');
            input.value = '';
            removeBtn.style.display = 'none';
        }
    </script>
}