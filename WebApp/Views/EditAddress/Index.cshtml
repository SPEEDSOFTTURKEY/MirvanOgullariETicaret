
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebUITheme.cshtml";
}

<ul class="breadcrumb">
    <li>
        <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i></a>
    </li>
    <li><a href="@Url.Action("Index","Account")">Hesabım</a></li>
    <li>
        <a href="@Url.Action("Index","Address")">Adreslerim</a>
    </li>
    <li>
     @*    
         kodun orjinal hali bu buna göre düzenlersin
     <a href="https://www.tilsimbaby.com/index.php?route=account/address/edit&amp;address_id=606">Adresi Düzenle</a> *@
        <a href="@Url.Action("Index","EditAddress")">Adres Düzenle</a>
    </li>
</ul>

<h1 class="title page-title"><span>Adresi Düzenle</span></h1>

<div id="account-address" class="container">
    <div class="row">
        <div id="content" class="col-sm-9">

            <form class="bg0 p-t-75" action="/EditAddress/AdressUpdate" method="post">

                <div id="address">
                    <div class="form-group required address-lastname">
                        <label class="col-sm-2 control-label" for="input-lastname">Adres Başlığı</label>
                        <div class="col-sm-10">
                            <input type="text" name="AdresBasligi" value="@ViewBag.Adres.AdresBasligi" placeholder="Adres Başlığı" id="input-lastname" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group required address-firstname">
                        <label class="col-sm-2 control-label" for="input-firstname">Adınız</label>
                        <div class="col-sm-10">
                            <input type="text" name="Adi" value="@ViewBag.Adres.Adi" placeholder="Adınız" id="input-firstname" class="form-control" />
                            <input type="hidden" name="Id" value="@ViewBag.Adres.Id" placeholder="Adınız" id="input-firstname" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group required address-lastname">
                        <label class="col-sm-2 control-label" for="input-lastname">Soyadınız</label>
                        <div class="col-sm-10">
                            <input type="text" name="Soyadi" value="@ViewBag.Adres.Soyadi" placeholder="Soyadınız" id="input-lastname" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group required address-lastname">
                        <label class="col-sm-2 control-label" for="input-lastname">Telefon</label>
                        <div class="col-sm-10">
                            <input type="text" name="Telefon" value="@ViewBag.Adres.Telefon" placeholder="Telefon" id="input-lastname" class="form-control" />
                        </div>
                    </div>
                   
                    <div class="form-group required address-address-1">
                        <label class="col-sm-2 control-label" for="input-address-1">Adres </label>
                        <div class="col-sm-10">
                            <input type="text" name="Adres" value="@ViewBag.Adres.Adres" placeholder="Adres" id="input-address-1" class="form-control" />
                        </div>
                    </div>
                 
                    <div class="form-group required address-city">
                        <label class="col-sm-2 control-label" for="input-city">Mahalle</label>
                        <div class="col-sm-10">
                            <input type="text" name="Mahalle" value="@ViewBag.Adres.Mahalle" placeholder="Mahalle" id="input-city" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group required address-city">
                        <label class="col-sm-2 control-label" for="input-city">İlçe</label>
                        <div class="col-sm-10">
                            <input type="text" name="ilce" value="@ViewBag.Adres.ilce" placeholder="İlçe" id="input-city" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group required address-city">
                        <label class="col-sm-2 control-label" for="input-city">Şehir</label>
                        <div class="col-sm-10">
                            <input type="text" name="il" value="@ViewBag.Adres.il" placeholder="Şehir" id="input-city" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group required address-postcode">
                        <label class="col-sm-2 control-label" for="input-postcode">Posta Kodu</label>
                        <div class="col-sm-10">
                            <input type="text" name="PostaKodu" value="@ViewBag.Adres.PostaKodu" placeholder="Posta Kodu" id="input-postcode" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group required address-country">
                        <label class="col-sm-2 control-label" for="input-country">Ülke</label>
                        <div class="col-sm-10">
                            <select name="Ulke" id="input-country" class="form-control">
                                <option value=""> --- Seçiniz --- </option>
                               <option value="Türkiye">Türkiye</option>
                            </select>
                        </div>
                    </div>
                
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Varsayılan Adres</label>
                        <div class="col-sm-10">
                            <label class="radio-inline">
                                <input type="radio" name="default" value="1" />
                                Evet
                            </label>
                            <label class="radio-inline">
                                <input type="radio" name="default" value="0" checked="checked" />
                                Hayır
                            </label>
                        </div>
                    </div>
                </div>
                <div class="buttons clearfix">
                    <div class="pull-left"><a href="@Url.Action("Index","Address")" class="btn btn-default">Geri</a></div>
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary"><span>Devam</span></button>
                    </div>
                </div>
            </form>
        </div>
        @Html.Partial("_AccountSidebar")
    </div>
</div>





