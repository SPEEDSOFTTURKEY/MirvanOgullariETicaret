@using WebApp.Models
@model EDMBilgileri
@{
    ViewData["Title"] = "EDM Bilgileri Güncelle";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .modern-wrapper {
        padding: 20px;
    }

    .modern-form-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        margin-top: 20px;
    }

        .modern-form-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .form-panel-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 30px;
    }

    .form-panel-content {
        padding: 30px;
    }

    .form-group-modern {
        margin-bottom: 25px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .control-label-modern {
        font-weight: 600;
        color: #4a5568;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: block;
    }

    .form-control-modern {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
        color: #000;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .btn-group-modern {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
        margin-top: 475px;
    }

    .btn-modern-form {
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        font-size: 15px;
    }

    .btn-cancel {
        background: #718096;
        color: white;
    }

        .btn-cancel:hover {
            background: #4a5568;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(113, 128, 150, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn-save {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(72, 187, 120, 0.4);
            color: white;
        }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        background: #edf2ae;
        color: #718096;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .icon-left {
        margin-right: 8px;
    }

    media (max-width: 768px) {
        .form-panel-content

    {
        padding: 20px;
    }

    .form-group-modern {
        padding: 15px;
    }

    .btn-group-modern {
        flex-direction: column-reverse;
    }

    .btn-modern-form {
        width: 100%;
        justify-content: center;
    }

    }
</style>

@using (Html.BeginForm("Kaydet", "AdminEDMBilgileriGuncelle", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <section class="modern-wrapper">
        <div class="row">
            <div class="col-lg-8">
                <div class="modern-form-panel">
                    <div class="form-panel-header">
                        <i class="fa fa-edit"></i>
                        <span>EDM Bilgileri Güncelle</span>
                    </div>
                    <div class="form-panel-content">
                        <div class="status-badge">
                            <i class="fa fa-info-circle"></i>
                            EDM ID: @Model.Id
                        </div>
                        <input type="hidden" class="form-control-modern" id="Id" name="Id" value="@Model.Id" />
                        <input type="hidden" class="form-control-modern" id="Durumu" name="Durumu" value="@Model.Durumu" />
                        <div class="row">
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="Unvan">Ünvan</label>
                                <input type="text" class="form-control-modern" name="Unvan" value="@Model.Unvan" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="VergiDairesi">Vergi Dairesi</label>
                                <input type="text" class="form-control-modern" name="VergiDairesi" value="@Model.VergiDairesi" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="VergiNumarasi">Vergi Numarası</label>
                                <input type="text" class="form-control-modern" name="VergiNumarasi" id="VergiNumarasi" value="@Model.VergiNumarasi" style="color:black" maxlength="11" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="Adres">Adres</label>
                                <input type="text" class="form-control-modern" name="Adres" value="@Model.Adres" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="Il">İl</label>
                                <input type="text" class="form-control-modern" name="Il" value="@Model.Il" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="Ilce">İlçe</label>
                                <input type="text" class="form-control-modern" name="Ilce" value="@Model.Ilce" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="PostaKodu">Posta Kodu</label>
                                <input type="text" class="form-control-modern" name="PostaKodu" value="@Model.PostaKodu" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="Email">E-mail</label>
                                <input type="text" class="form-control-modern" id="Email" name="Email" value="@Model.Email" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="Telefon">Telefon</label>
                                <input type="text" class="form-control-modern" name="Telefon" id="Telefon" value="@Model.Telefon" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="KullaniciAdi">Kullanıcı Adı</label>
                                <input type="text" class="form-control-modern" name="KullaniciAdi" value="@Model.KullaniciAdi" style="color:black" required />
                            </div>
                            <div class="form-group-modern col-md-4">
                                <label class="control-label-modern" for="Sifre">Şifre</label>
                                <input type="text" class="form-control-modern" name="Sifre" value="@Model.Sifre" style="color:black" required />
                            </div>
                            <div class="btn-group-modern">
                                <a href="@Url.Action("Index","AdminEDMBilgileri")" class="btn-modern-form btn-cancel">
                                    <i class="icon-cancel icon-left"></i>
                                    <span>Vazgeç</span>
                                </a>
                                <button type="submit" class="btn-modern-form btn-save">
                                    <i class="icon-save icon-left"></i>
                                    <span>Kaydet</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@section Script {
    <script type="text/javascript">
        $(document).ready(function () {
            $("#Telefon").inputmask({ "mask": "0(999)999-9999" });
        });
    </script>
}