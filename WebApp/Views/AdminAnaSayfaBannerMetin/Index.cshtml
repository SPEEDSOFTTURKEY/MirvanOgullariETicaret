 *@<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
<script>
    // Section toggling
    function showList() {
        document.getElementById('list-section').classList.remove('hidden');
        document.getElementById('add-form-section').classList.add('hidden');
        resetForms();
    }

    function showAddForm() {
        document.getElementById('list-section').classList.add('hidden');
        document.getElementById('add-form-section').classList.remove('hidden');
        resetForms();
    }

    // Reset forms
    function resetForms() {
        document.querySelector('#add-form-section form').reset();
        if (CKEDITOR.instances['Metin']) {
            CKEDITOR.instances['Metin'].setData('');
        }
    }

    // DataTable initialization
    $(document).ready(function () {
        if ($.fn.DataTable && $('#TblVeriler').length > 0) {
            $('#TblVeriler').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                },
                "pageLength": 10,
                "order": [[0, "desc"]]
            });
        }

        // CKEditor başlatma
        CKEDITOR.replace('Metin');

        // Form validation for add form
        document.querySelector('#add-form-section form').addEventListener('submit', function (e) {
            const metin = CKEDITOR.instances['Metin'].getData();
            if (!metin.trim()) {
                alert('Lütfen banner yazısı giriniz.');
                e.preventDefault();
            }
        });
    });
</script>