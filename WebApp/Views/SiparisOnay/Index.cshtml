@{
    ViewData["Title"] = "Sipariş Onay";
    Layout = "~/Views/Shared/_LayoutWebUITheme.cshtml";
}

<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/WebUITheme/images/bg-03.jpg');">
    <h2 class="ltext-105 cl0 txt-center">
        Sipariş Onay
    </h2>
</section>

<section class="bg0 p-t-62 p-b-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Sipariş Özeti
                    </h4>
                     @if (ViewBag.SiparisNo !=null)
                            {
                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Siparis No:
                            </span>
                        </div>
                        <div class="size-209">
                           
                                <span>@ViewBag.SiparisNo</span>
                                <h6 style="color:red">Siparis Numaranızı Kayıt Alınız.</h6>
                          
                         
                        </div>
                    </div>
                    }
                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Ödenecek Tutar:
                            </span>
                        </div>
                        <div class="size-209">
                            @if (!string.IsNullOrEmpty(ViewBag.OdenecekTutar))
                            {
                                <span>@ViewBag.OdenecekTutar TL</span>
                            }
                            else
                            {
                                <span>Bilinmiyor</span>
                            }
                        </div>
                    </div>

                

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Ödeme Yöntemi:
                            </span>
                        </div>
                        <div class="size-209">
                            <span>Kapıda Ödeme</span>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Tahmini Teslimat Süresi:
                            </span>
                        </div>
                        <div class="size-209">
                            <span>1-3 Gün</span>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                İletişim Bilgisi:
                            </span>
                        </div>
                        <div class="size-209">
                            <span>0506 497 05 72</span>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Kargo Adresi:
                            </span>
                        </div>
                        <div class="size-209">
                            @if (ViewBag.KargoAdresi != null)
                            {
                                <span>
                                    @ViewBag.KargoAdresi.Adi @ViewBag.KargoAdresi.Soyadi<br />
                                    @ViewBag.KargoAdresi.Adres, @ViewBag.KargoAdresi.Mahalle<br />
                                    @ViewBag.KargoAdresi.ilce, @ViewBag.KargoAdresi.il<br />
                                    Telefon: @ViewBag.KargoAdresi.Telefon
                                </span>
                            }
                            else
                            {
                                <span>Adres bilgisi bulunamadı</span>
                            }
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Fatura Adresi:
                            </span>
                        </div>
                        <div class="size-209">
                            @if (ViewBag.FaturaAdresi != null)
                            {
                                <span>
                                    @ViewBag.FaturaAdresi.Adi @ViewBag.FaturaAdresi.Soyadi<br />
                                    @ViewBag.FaturaAdresi.Adres, @ViewBag.FaturaAdresi.Mahalle<br />
                                    @ViewBag.FaturaAdresi.ilce, @ViewBag.FaturaAdresi.il<br />
                                    Telefon: @ViewBag.FaturaAdresi.Telefon
                                </span>
                            }
                            else
                            {
                                <span>Adres bilgisi bulunamadı</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>