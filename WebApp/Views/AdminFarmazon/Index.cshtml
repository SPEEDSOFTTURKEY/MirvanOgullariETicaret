@using System.Globalization
@using WebApp.Models
@using Newtonsoft.Json

@{
    ViewData["Title"] = "Farmazon Ürün Yönetimi";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .modern-wrapper {
        padding: 20px;
    }

    .modern-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        margin-bottom: 30px;
        margin-top: 30px;
    }

        .modern-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .panel-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .panel-content {
        padding: 25px;
    }

    .btn-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .modern-table {
        margin-top: 20px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 0 1px #e0e0e0;
    }

        .modern-table thead {
            background: #f8f9fa;
        }

        .modern-table th {
            padding: 15px;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #e0e0e0;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
        }

        .modern-table td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: middle;
        }

        .modern-table tbody tr {
            transition: background-color 0.2s ease;
        }

            .modern-table tbody tr:hover {
                background-color: #f8f9fa;
            }

    .btn-action {
        padding: 7px 14px;
        border-radius: 6px;
        border: none;
        font-size: 12px;
        font-weight: 500;
        transition: all 0.2s ease;
        margin-right: 5px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-action-update {
        background: #38a169;
        color: white;
    }

        .btn-action-update:hover {
            background: #2f855a;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(56, 161, 105, 0.3);
        }

    .btn-action-price-stock {
        background: #3182ce;
        color: white;
    }

        .btn-action-price-stock:hover {
            background: #2b6cb0;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(49, 130, 206, 0.3);
        }

    .btn-action-delete {
        background: #f56565;
        color: white;
    }

        .btn-action-delete:hover {
            background: #e53e3e;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(245, 101, 101, 0.3);
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #718096;
    }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 20px;
            color: #cbd5e0;
        }

    .content-text {
        max-width: 200px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        color: #4a5568;
    }

    .modal-content {
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .modal-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-radius: 12px 12px 0 0;
        padding: 15px 20px;
    }

    .modal-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #e0e0e0;
        padding: 8px;
        width: 100%;
    }

    media (max-width: 768px) {
        .modern-table

    {
        font-size: 14px;
    }

    .btn-action {
        padding: 5px 10px;
        font-size: 11px;
    }

    .content-text {
        max-width: 150px;
    }

    }
</style>

<section class="modern-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="modern-panel">
                <div class="panel-header">
                    <i class="fa fa-shopping-cart"></i>
                    <span>Farmazon Ürünleri</span>
                    <button class="btn-modern" data-toggle="modal" data-target="#addProductModal">
                        <i class="fa fa-plus"></i>
                        <span>Ürün Ekle</span>
                    </button>
                </div>
                <div class="panel-content">
                    @if (ViewBag.Products != null && ViewBag.Products.Count > 0)
                    {
                        <div class="table-container">
                            <table class="table modern-table" id="TblVeriler">
                                <thead>
                                    <tr>
                                        <th>Ürün Adı</th>
                                        <th>Barkod</th>
                                        <th>Fiyat</th>
                                        <th>Stok</th>
                                        <th>Miad</th>
                                        <th>Öne Çıkan</th>
                                        <th style="text-align: center;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in ViewBag.Products)
                                    {
                                        <tr data-product='@JsonConvert.SerializeObject(product)'>
                                            <td class="content-text">@product.Product.Name</td>
                                            <td class="content-text">@product.Product.Barcode</td>
                                            <td class="content-text">@(((decimal)product.Price).ToString("C", CultureInfo.GetCultureInfo("tr-TR")))</td>
                                            <td class="content-text">@product.Stock</td>
                                            <td class="content-text">@product.Expiration</td>
                                            <td class="content-text">@product.IsFeatured</td>
                                            <td style="text-align: center;">
                                                <button class="btn-action btn-action-update" onclick="openUpdateModal('@product.Id', this)">
                                                    <i class="fa fa-edit"></i>
                                                    <span>Güncelle</span>
                                                </button>
                                                <button class="btn-action btn-action-price-stock" onclick="openPriceStockModal('@product.Id', this)">
                                                    <i class="fa fa-money"></i>
                                                    <span>Fiyat/Stok</span>
                                                </button>
                                                <a class="btn-action btn-action-delete" href="/AdminFarmazon/Sil?productId=@product.Id&pazarYeriId=@ViewBag.PazarYeriId"
                                                   onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?');">
                                                    <i class="fa fa-trash"></i>
                                                    <span>Sil</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fa fa-shopping-cart"></i>
                            <h4>Henüz ürün bulunamadı</h4>
                            <p>Farmazon ürünlerini listeleyebilirsiniz.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Add Product Modal -->
    <div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="addProductModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addProductModalLabel">Yeni Ürün Ekle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addProductForm">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="urunAd">Ürün Adı</label>
                                <input type="text" class="form-control" id="urunAd" name="urunAd"  style="width: 100%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="fiyat">Fiyat (TL)</label>
                                <input type="text" class="form-control" id="fiyat" name="fiyat"  style="width: 80%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="stok">Stok Miktarı</label>
                                <input type="number" class="form-control" id="stok" name="stok"  style="width: 70%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="expiration">Miad Tarihi (YYYY-MM-DD)</label>
                                <input type="date" class="form-control" id="expiration" name="expiration"  style="width: 90%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="barkod">Barkod</label>
                                <input type="text" class="form-control" id="barkod" name="barkod"   style="width: 90%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="maxCount">Maksimum Satış Adedi</label>
                                <input type="number" class="form-control" id="maxCount" name="maxCount" style="width: 70%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="isFeatured">Öne Çıkar</label>
                                <select class="form-control" id="isFeatured" name="isFeatured" style="width: 60%;">
                                    <option value="false">Hayır</option>
                                    <option value="true">Evet</option>
                                </select>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="psf">PSF</label>
                                <input type="text" class="form-control" id="psf" name="psf" style="width: 70%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="vat">KDV (%)</label>
                                <input type="number" class="form-control" id="vat" name="vat" style="width: 60%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="sku">Stok Kodu</label>
                                <input type="text" class="form-control" id="sku" name="sku" style="width: 80%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="resimUrl">Resim URL</label>
                                <input type="text" class="form-control" id="resimUrl" name="resimUrl" style="width: 100%;">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-modern">Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Update Product Modal -->
    <div class="modal fade" id="updateProductModal" tabindex="-1" role="dialog" aria-labelledby="updateProductModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="updateProductModalLabel">Ürün Güncelle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="updateProductForm">
                        <input type="hidden" id="urunId">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="updateUrunAd">Ürün Adı</label>
                                <input type="text" class="form-control" id="updateUrunAd"   style="width: 100%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="updateFiyat">Fiyat (TL)</label>
                                <input type="text" class="form-control" id="updateFiyat"   style="width: 80%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="updateStok">Stok Miktarı</label>
                                <input type="number" class="form-control" id="updateStok"   style="width: 70%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="updateExpiration">Miad Tarihi (YYYY-MM-DD)</label>
                                <input type="date" class="form-control" id="updateExpiration"   style="width: 90%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="updateBarkod">Barkod</label>
                                <input type="text" class="form-control" id="updateBarkod"   style="width: 90%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="updateMaxCount">Maksimum Satış Adedi</label>
                                <input type="number" class="form-control" id="updateMaxCount" style="width: 70%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="updateIsFeatured">Öne Çıkar</label>
                                <select class="form-control" id="updateIsFeatured" style="width: 60%;">
                                    <option value="false">Hayır</option>
                                    <option value="true">Evet</option>
                                </select>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="updateState">Durum</label>
                                <select class="form-control" id="updateState" style="width: 60%;">
                                    <option value="1">Aktif</option>
                                    <option value="2">Pasif</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="updatePsf">PSF</label>
                                <input type="text" class="form-control" id="updatePsf" style="width: 70%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="updateVat">KDV (%)</label>
                                <input type="number" class="form-control" id="updateVat" style="width: 60%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <label for="updateSku">Stok Kodu</label>
                                <input type="text" class="form-control" id="updateSku" style="width: 80%;">
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="updateResimUrl">Resim URL</label>
                                <input type="text" class="form-control" id="updateResimUrl" style="width: 100%;">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="updateDescription">Açıklama</label>
                                <textarea class="form-control" id="updateDescription" style="width: 100%;"></textarea>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-modern">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Price and Stock Update Modal -->
    <div class="modal fade" id="priceStockModal" tabindex="-1" role="dialog" aria-labelledby="priceStockModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="priceStockModalLabel">Fiyat ve Stok Güncelle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="priceStockForm">
                        <input type="hidden" id="priceStockId">
                        <div class="form-group">
                            <label for="priceStockFiyat">Fiyat (TL)</label>
                            <input type="text" class="form-control" id="priceStockFiyat"  >
                        </div>
                        <div class="form-group">
                            <label for="priceStockStok">Stok Miktarı</label>
                            <input type="number" class="form-control" id="priceStockStok"  >
                        </div>
                        <button type="submit" class="btn btn-modern">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Script {
    <script>
        $(document).ready(function () {
            if ($.fn.DataTable && $('#TblVeriler').length > 0) {
                $('#TblVeriler').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                    },
                    "pageLength": 10,
                    "order": [[0, "desc"]],
                    "responsive": true,
                    "bDestroy": true
                });
            }

            $('#addProductForm').submit(function (e) {
                e.preventDefault();
                var pazarYeriId = @ViewBag.PazarYeriId;

                if (!pazarYeriId) {
                    alert('Pazar yeri ID bulunamadı.');
                    return;
                }

                var productData = {
                    price: parseFloat($('#fiyat').val().replace(',', '.')),
                    stock: parseInt($('#stok').val()),
                    expiration: $('#expiration').val() || null,
                    maxCount: parseInt($('#maxCount').val()) || null,
                    isFeatured: $('#isFeatured').val() === 'true',
                    product: {
                        id: 0,
                        name: $('#urunAd').val(),
                        barcode: $('#barkod').val() || null,
                        psf: parseFloat($('#psf').val().replace(',', '.')) || null,
                        vat: parseInt($('#vat').val()) || null,
                        sku: $('#sku').val() || null,
                        image: $('#resimUrl').val() || null
                    }
                };

                console.log("Sending Farmazon add data:", productData);

                $.ajax({
                    url: '/AdminFarmazon/AddFarmazonProduct?pazarYeriId=' + pazarYeriId,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(productData),
                    success: function (response) {
                        console.log("Response received:", response);
                        if (response.success) {
                            alert('Ürün başarıyla eklendi: ' + response.message);
                            $('#addProductModal').modal('hide');
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX error:", error);
                        alert('Hata: ' + error);
                    }
                });
            });

            $('#updateProductForm').submit(function (e) {
                e.preventDefault();
                var pazarYeriId = @ViewBag.PazarYeriId;

                if (!pazarYeriId) {
                    alert('Pazar yeri ID bulunamadı.');
                    return;
                }

                var productData = {
                    id: parseInt($('#urunId').val()) || 0,
                    price: parseFloat($('#updateFiyat').val().replace(',', '.')),
                    stock: parseInt($('#updateStok').val()),
                    state: parseInt($('#updateState').val()),
                    expiration: $('#updateExpiration').val() || null,
                    maxCount: parseInt($('#updateMaxCount').val()) || null,
                    description: $('#updateDescription').val() || "",
                    isFeatured: $('#updateIsFeatured').val() === 'true',
                    product: {
                        id: parseInt($('#urunId').val()) || 0,
                        name: $('#updateUrunAd').val(),
                        barcode: $('#updateBarkod').val() || null,
                        psf: parseFloat($('#updatePsf').val().replace(',', '.')) || null,
                        vat: parseInt($('#updateVat').val()) || null,
                        sku: $('#updateSku').val() || null,
                        image: $('#updateResimUrl').val() || null
                    }
                };

                console.log("Sending Farmazon update data:", productData);

                $.ajax({
                    url: '/AdminFarmazon/UpdateFarmazonProduct?pazarYeriId=' + pazarYeriId,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(productData),
                    success: function (response) {
                        console.log("Update response:", response);
                        if (response.success) {
                            alert('Ürün başarıyla güncellendi: ' + response.message);
                            $('#updateProductModal').modal('hide');
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Update error:", error);
                        alert('Hata: ' + error);
                    }
                });
            });

            $('#priceStockForm').submit(function (e) {
                e.preventDefault();
                var pazarYeriId = @ViewBag.PazarYeriId;

                if (!pazarYeriId) {
                    alert('Pazar yeri ID bulunamadı.');
                    return;
                }

                var productData = {
                    id: parseInt($('#priceStockId').val()) || 0,
                    price: parseFloat($('#priceStockFiyat').val().replace(',', '.')),
                    stock: parseInt($('#priceStockStok').val())
                };

                console.log("Sending Farmazon price/stock update data:", productData);

                $.ajax({
                    url: '/AdminFarmazon/UpdateFarmazonPriceAndStock?pazarYeriId=' + pazarYeriId,
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(productData),
                    success: function (response) {
                        console.log("Price/Stock update response:", response);
                        if (response.success) {
                            alert('Fiyat ve stok başarıyla güncellendi: ' + response.message);
                            $('#priceStockModal').modal('hide');
                            location.reload();
                        } else {
                            alert('Hata: ' + response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error("Price/Stock update error:", error);
                        alert('Hata: ' + error);
                    }
                });
            });

            window.openUpdateModal = function (productId, button) {
                $('#urunId').val(productId);
                var productData = $(button).closest('tr').data('product');

                console.log("Opening update modal for:", productData);

                $('#updateUrunAd').val(productData.product?.name || '');
                $('#updateFiyat').val(productData.price || '');
                $('#updateStok').val(productData.stock || '');
                $('#updateExpiration').val(productData.expiration || '');
                $('#updateBarkod').val(productData.product?.barcode || '');
                $('#updateMaxCount').val(productData.maxCount || '');
                $('#updateIsFeatured').val(productData.isFeatured ? 'true' : 'false');
                $('#updateState').val(productData.state || '1');
                $('#updateDescription').val(productData.description || '');
                $('#updatePsf').val(productData.product?.psf || '');
                $('#updateVat').val(productData.product?.vat || '');
                $('#updateSku').val(productData.product?.sku || '');
                $('#updateResimUrl').val(productData.product?.image || '');

                $('#updateProductModal').modal('show');
            };

            window.openPriceStockModal = function (productId, button) {
                $('#priceStockId').val(productId);
                var productData = $(button).closest('tr').data('product');

                console.log("Opening price/stock modal for:", productData);

                $('#priceStockFiyat').val(productData.price || '');
                $('#priceStockStok').val(productData.stock || '');

                $('#priceStockModal').modal('show');
            };
        });
    </script>
}