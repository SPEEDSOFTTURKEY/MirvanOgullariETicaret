        // Global variables for image carousel
        let currentImageIndex = 0;
        let images = [];

        // Modal open/close functions
        function openModal(productId) {
            var modal = document.getElementById('productModal');
            modal.style.display = 'flex';

            // Initialize tabs
            var tabs = document.querySelectorAll('.custom-tab');
            var contents = document.querySelectorAll('.custom-tab-content');
            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => t.classList.remove('active'));
                    contents.forEach(c => c.classList.remove('active'));
                    tab.classList.add('active');
                    document.getElementById(tab.getAttribute('data-tab')).classList.add('active');
                });
            });

            // Reset to General tab
            tabs.forEach(t => t.classList.remove('active'));
            contents.forEach(c => c.classList.remove('active'));
            document.querySelector('.custom-tab[data-tab="general"]').classList.add('active');
            document.getElementById('general').classList.add('active');

            // Load product details via AJAX
            $.ajax({
                url: '/PazarYerleriUrun/GetProductDetails/' + productId,
                type: 'GET',
                success: function (data) {
                    // Define marketplace prefixes and general fields
                    var marketplaces = {
                        'N11': ['N11_'],
                        'GoTurc': ['GoTurc_'],
                        'Idefix': ['Idefix_'],
                        'PTT': ['PTT_'],
                        'Pazarama': ['Pazarama_'],
                        'CicekSepeti': ['CicekSepeti_'],
                        'Farmazon': ['Farmazon_'],
                        'FarmaBorsa': ['FarmaBorsa_'],
                        'Trendyol': ['Trendyol_']
                    };
                    var generalFields = ['Id', 'UrunId', 'Title', 'ProductCode', 'Barcode', 'Description', 'ListPrice', 'VatRate', 'ImgFilesJson', 'Gonderildi'];

                    // Clear all tab contents
                    ['general', 'n11', 'goturc', 'idefix', 'ptt', 'pazarama', 'ciceksepeti', 'farmazon', 'farmaborsa', 'trendyol'].forEach(tab => {
                        document.getElementById(tab + '-details').innerHTML = '';
                    });

                    // Populate General tab table
                    var generalHtml = '<tr><th>Özellik</th><th>Değer</th></tr>';
                    for (var key in data) {
                        if (generalFields.includes(key) && data[key] !== null && data[key] !== undefined && data[key] !== '') {
                            generalHtml += '<tr><th>' + key.replace(/([A-Z])/g, ' $1').trim() + '</th><td>' + data[key] + '</td></tr>';
                        }
                    }
                    document.getElementById('general-details').innerHTML = generalHtml;

                    // Populate Marketplace tabs
                    for (var marketplace in marketplaces) {
                        var prefixes = marketplaces[marketplace];
                        var html = '<tr><th>Özellik</th><th>Değer</th></tr>';
                        var hasData = false;
                        for (var key in data) {
                            if (prefixes.some(prefix => key.startsWith(prefix)) && data[key] !== null && data[key] !== undefined && data[key] !== '') {
                                html += '<tr><th>' + key.replace(prefixes[0], '').replace(/([A-Z])/g, ' $1').trim() + '</th><td>' + data[key] + '</td></tr>';
                                hasData = true;
                            }
                        }
                        var tabId = marketplace.toLowerCase();
                        document.getElementById(tabId + '-details').innerHTML = html;
                        // Show/hide tabs based on data availability
                        var tabElement = document.querySelector('.custom-tab[data-tab="' + tabId + '"]');
                        tabElement.style.display = hasData ? 'block' : 'none';
                    }
                },
                error: function () {
                    document.getElementById('general-details').innerHTML = '<tr><td colspan="2" style="color: #e53e3e;">Ürün detayları yüklenirken bir hata oluştu.</td></tr>';
                }
            });
        }

        function closeModal() {
            var modal = document.getElementById('productModal');
            modal.style.display = 'none';
        }

        // Image Carousel Modal Functions
        function openImageModal(productId) {
            console.log("Product ID:", productId); // Hata ayıklama için
            var modal = document.getElementById('imageModal');
            var carouselInner = document.getElementById('carouselInner');
            carouselInner.innerHTML = ''; // Clear previous images
            images = []; // Reset images array
            currentImageIndex = 0;

            // Load images via AJAX
            $.ajax({
                url: '/PazarYerleriUrun/GetProductImages/' + productId,
                type: 'GET',
                success: function (data) {
                    if (data && data.length > 0) {
                        images = data; // Assuming data is an array of image URLs
                        carouselInner.innerHTML = ''; // Clear any previous content
                        images.forEach((img, index) => {
                            var div = document.createElement('div');
                            div.className = 'carousel-item' + (index === 0 ? ' active' : '');
                            div.innerHTML = `<img src="${img}" alt="Ürün Görseli" />`;
                            carouselInner.appendChild(div);
                        });
                        updateCarousel();
                        modal.style.display = 'flex';
                    } else {
                        carouselInner.innerHTML = '<div class="carousel-item active">Görsel bulunamadı.</div>';
                        modal.style.display = 'flex';
                    }
                },
                error: function (xhr, status, error) {
                    console.error("Error loading images:", error); // Hata ayıklama için
                    carouselInner.innerHTML = '<div class="carousel-item active">Görseller yüklenirken hata oluştu.</div>';
                    modal.style.display = 'flex';
                }
            });
        }

        function closeImageModal() {
            var modal = document.getElementById('imageModal');
            modal.style.display = 'none';
        }

        function updateCarousel() {
            var carouselInner = document.getElementById('carouselInner');
            if (carouselInner && images.length > 0) {
                carouselInner.style.transform = `translateX(-${currentImageIndex * 100}%)`;

                // Tüm item'ları inactive yap
                var items = carouselInner.getElementsByClassName('carousel-item');
                for (var i = 0; i < items.length; i++) {
                    items[i].classList.remove('active');
                }

                // Sadece current item'ı active yap
                if (items[currentImageIndex]) {
                    items[currentImageIndex].classList.add('active');
                }
            }
        }

        function prevImage() {
            if (currentImageIndex > 0) {
                currentImageIndex--;
                updateCarousel();
            }
        }

        function nextImage() {
            if (currentImageIndex < images.length - 1) {
                currentImageIndex++;
                updateCarousel();
            }
        }

        // Select All Checkbox Functionality
        function toggleSelectAll(source) {
            var checkboxes = document.getElementsByName('idList');
            for (var i = 0; i < checkboxes.length; i++) {
                checkboxes[i].checked = source.checked;
            }
        }

