@{
    ViewData["Title"] = "Ürün Bilgileri Management";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .modern-wrapper {
        padding: 20px;
    }

    .modern-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        margin-bottom: 30px;
        margin-top: 30px;
    }

        .modern-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .panel-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .panel-content {
        padding: 25px;
    }

    .btn-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-search {
        background: #48bb78;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
    }

        .btn-search:hover {
            background: #38a169;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(72, 187, 120, 0.3);
            color: white;
        }

    .btn-reset {
        background: #e2e8f0;
        color: #4a5568;
        padding: 10px 20px;
        border-radius: 8px;
    }

        .btn-reset:hover {
            background: #cbd5e0;
            transform: translateY(-2px);
            color: #4a5568;
            text-decoration: none;
        }

    .btn-bulk-delete {
        background: #f56565;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        margin-bottom: 15px;
    }

        .btn-bulk-delete:hover {
            background: #e53e3e;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(245, 101, 101, 0.3);
            color: white;
        }

    .modern-table {
        margin-top: 20px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 0 1px #e0e0e0;
    }

        .modern-table thead {
            background: #f8f9fa;
        }

        .modern-table th {
            padding: 15px;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #e0e0e0;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
        }

        .modern-table td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: middle;
        }

        .modern-table tbody tr {
            transition: background-color 0.2s ease;
        }

            .modern-table tbody tr:hover {
                background-color: #f8f9fa;
            }

    .btn-action {
        padding: 7px 14px;
        border-radius: 6px;
        border: none;
        font-size: 12px;
        font-weight: 500;
        transition: all 0.2s ease;
        margin-right: 5px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-action-edit {
        background: #48bb78;
        color: white;
    }

        .btn-action-edit:hover {
            background: #38a169;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(72, 187, 120, 0.3);
        }

    .btn-action-delete {
        background: #f56565;
        color: white;
    }

        .btn-action-delete:hover {
            background: #e53e3e;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(245, 101, 101, 0.3);
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #718096;
    }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 20px;
            color: #cbd5e0;
        }

    .content-text {
        max-width: 150px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        color: #4a5568;
    }

    .form-control-modern {
        padding: 10px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
        color: #000;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .search-form, .discount-form {
        display: flex;
        align-items: flex-end;
        gap: 10px;
        margin-bottom: 20px;
        flex-wrap: wrap;
    }

    .form-group-modern {
        display: flex;
        flex-direction: column;
    }

        .form-group-modern label {
            font-weight: 600;
            color: #4a5568;
            font-size: 14px;
            margin-bottom: 8px;
        }

    .product-image {
        max-width: 100px;
        max-height: 100px;
        object-fit: cover;
        border-radius: 8px;
    }

    .checkbox-container {
        display: flex;
        justify-content: center;
    }

    media (max-width: 768px) {
        .modern-table

    {
        font-size: 14px;
    }

    .btn-action {
        padding: 5px 10px;
        font-size: 11px;
    }

    .content-text {
        max-width: 100px;
    }

    .search-form, .discount-form {
        flex-direction: column;
        align-items: stretch;
    }

    .btn-modern, .btn-search, .btn-reset, .btn-bulk-delete {
        width: 100%;
        margin-top: 10px;
    }

    .form-group-modern {
        width: 100%;
    }

    }
</style>

<section class="modern-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <div class="modern-panel">
                <div class="panel-header">
                    <i class="fa fa-shopping-bag"></i>
                    <span>Ürün Bilgileri (@ViewBag.UrunlerList.Count)</span>
                </div>
                <div class="panel-content">
                    <!-- Search Form -->
                    <form action="/AdminUrunBilgileri/Search" method="post" class="search-form">
                        <div class="form-group-modern">
                            <label>Ürün Adı</label>
                            <input type="text" class="form-control-modern" name="adi" placeholder="Ürün Adı Ara" />
                        </div>
                        <button type="submit" class="btn-modern btn-search">
                            <i class="fa fa-search"></i>
                            <span>Bul</span>
                        </button>
                        <a class="btn-modern btn-reset" href="/AdminUrunBilgileri/GetAllData">
                            <i class="fa fa-list"></i>
                            <span>Tümü</span>
                        </a>
                        <a class="btn-modern" href="/AdminUrunBilgileriEkle/">
                            <i class="fa fa-plus"></i>
                            <span>Yeni Ürün Ekle</span>
                        </a>
                    </form>

                    <hr />

                    <!-- All Products Discount Form -->
                    <form action="/AdminUrunBilgileri/TumIndirim" method="post" class="discount-form">
                        <div class="form-group-modern">
                            <label>Tüm Ürünler için İndirim Yüzdesi</label>
                            <input type="text" class="form-control-modern" name="indirim" placeholder="İndirim Yüzdesi" required />
                        </div>
                        <button type="submit" class="btn-modern btn-search">
                            <i class="fa fa-percent"></i>
                            <span>Uygula</span>
                        </button>
                    </form>

                    <hr />

                    <!-- Main Category Discount Form -->
                    <form action="/AdminUrunBilgileri/AnaKategoriIndirim" method="post" class="discount-form">
                        <div class="form-group-modern">
                            <label>İndirim Yapmak İstediğiniz Kategori</label>
                            <select class="form-control-modern" name="AnaKategoriId">
                                <option value="">Bir Ana Kategori Seçiniz</option>
                                @if (ViewBag.AnaKategori != null)
                                {
                                    foreach (var item in ViewBag.AnaKategori)
                                    {
                                        <option value="@item.Id">@item.Adi</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group-modern">
                            <label>İndirim Yüzdesi</label>
                            <input type="text" class="form-control-modern" name="indirim" placeholder="İndirim Yüzdesi" required />
                        </div>
                        <button type="submit" class="btn-modern btn-search">
                            <i class="fa fa-percent"></i>
                            <span>Uygula</span>
                        </button>
                    </form>

                    <hr />

                    <!-- Subcategory Discount Form -->
                    <form action="/AdminUrunBilgileri/KategoriIndirim" method="post" class="discount-form">
                        <div class="form-group-modern">
                            <label>İndirim Yapmak İstediğiniz Kategori</label>
                            <select id="AnaKategoriId" class="form-control-modern" name="UrunAnaKategoriId">
                                <option value="">Bir Ana Kategori Seçiniz</option>
                                @if (ViewBag.AnaKategori != null)
                                {
                                    foreach (var item in ViewBag.AnaKategori)
                                    {
                                        <option value="@item.Id">@item.Adi</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group-modern">
                            <label>Ürün Alt Kategori</label>
                            <select id="altkategori" class="form-control-modern" name="UrunAltKategoriId">
                                <option value="">Önce Ana Kategori Seçiniz</option>
                            </select>
                        </div>
                        <div class="form-group-modern">
                            <label>İndirim Yüzdesi</label>
                            <input type="text" class="form-control-modern" name="indirim" placeholder="İndirim Yüzdesi" required />
                        </div>
                        <button type="submit" class="btn-modern btn-search">
                            <i class="fa fa-percent"></i>
                            <span>Uygula</span>
                        </button>
                    </form>

                    <hr />

                    @if (ViewBag.UrunlerList != null && ViewBag.UrunlerList.Count > 0)
                    {
                        <form class="form-horizontal" action="@Url.Action("TopluSil", "AdminUrunBilgileri")" method="post">
                            <button type="submit" class="btn-modern btn-bulk-delete" onclick="return confirm('Seçili ürünleri toplu olarak silmek istediğinizden emin misiniz?');">
                                <i class="fa fa-trash"></i>
                                <span>Toplu Sil</span>
                            </button>
                            <div class="table-container">
                                <table class="table modern-table" id="TblVeriler">
                                    <thead>
                                        <tr>
                                            <th style="text-align: center;">Seç</th>
                                            <th>Ürün Ana Kategori</th>
                                            <th>Ürün Tipi</th>
                                            <th>Ürün Adı</th>
                                            <th>Renk</th>
                                            <th>Ürün Resmi</th>
                                            <th>İndirim Yüzdesi</th>
                                            <th>Fiyat</th>
                                            <th>İndirimli Fiyat</th>
                                            <th>Açıklama</th>
                                            <th>Özellikler</th>
                                            <th style="text-align: center;">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var urun in ViewBag.UrunlerList)
                                        {
                                            <tr>
                                                <td class="checkbox-container">
                                                    <input type="checkbox" name="idList" value="@urun.Id" />
                                                </td>
                                                <td class="content-text">@urun.UrunAnaKategori.Adi</td>
                                                <td class="content-text">@urun.UrunAltKategori.Adi</td>
                                                <td class="content-text">@urun.Adi</td>
                                                <td class="content-text">
                                                    @(urun.Renk != null ? urun.Renk.Adi : "Renk Seçilmedi")
                                                </td>
                                                <td>
                                                    @if (urun.UrunFotograf != null && urun.UrunFotograf.Count > 0)
                                                    {
                                                        <img src="@urun.UrunFotograf[0].FotografKucuk" alt="Ürün Resmi" class="product-image" />
                                                    }
                                                    else
                                                    {
                                                        <span>Fotoğraf Yüklenmemiş</span>
                                                    }
                                                </td>
                                                <td class="content-text">
                                                    @(urun.IndirimYuzdesi != null ? urun.IndirimYuzdesi.ToString() : "İndirim Uygulanmamış")
                                                </td>
                                                <td class="content-text">@urun.Fiyat</td>
                                                <td class="content-text">
                                                    @if (urun.IndirimYuzdesi != null)
                                                    {
                                                        @Math.Round(urun.Fiyat - (urun.Fiyat * (urun.IndirimYuzdesi / 100m)), 2)
                                                    }
                                                    else
                                                    {
                                                        @:İndirimli Fiyat Yok
                                                    }
                                                </td>
                                                <td class="content-text">
                                                    @if (urun.Aciklama != null)
                                                    {
                                                        @Html.Raw(urun.Aciklama)
                                                    }
                                                    else
                                                    {
                                                        @:Açıklama Eklenmedi
                                                    }
                                                </td>
                                                <td class="content-text">
                                                    @if (urun.Ozellikler != null)
                                                    {
                                                        @Html.Raw(urun.Ozellikler)
                                                    }
                                                    else
                                                    {
                                                        @:Özellikler Eklenmedi
                                                    }
                                                </td>
                                                <td style="text-align: center;">
                                                    <a class="btn-action btn-action-edit" href="/AdminUrunBilgileri/Guncelleme/@urun.Id">
                                                        <i class="fa fa-pencil"></i>
                                                        <span>Düzenle</span>
                                                    </a>
                                                    <a class="btn-action btn-action-delete" href="/AdminUrunBilgileri/Sil?id=@urun.Id&renkId=@urun.Renk.Id"
                                                       onclick="return confirm('Bu ürünü silmek istediğinizden emin misiniz?');">
                                                        <i class="fa fa-trash"></i>
                                                        <span>Sil</span>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fa fa-shopping-bag"></i>
                            <h4>Henüz ürün eklenmemiş</h4>
                            <p>Yukarıdaki "Yeni Ürün Ekle" butonunu kullanarak ilk ürününüzü ekleyebilirsiniz.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Script {
    <script>
        $(document).ready(function () {
        if ($.fn.DataTable && $('#TblVeriler').length > 0) {
            $('#TblVeriler').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                },
                "pageLength": 10,
                "order": [[1, "desc"]],
                "responsive": true,
                "bDestroy": true
            });
        }

            $("#AnaKategoriId").change(function () {
                var anaKategoriId = $(this).val();
                $.ajax({
                    url: '@Url.Action("GetirAltKategori", "AdminUrunBilgileri")',
                    type: 'POST',
                    data: { AnaKategoriId: anaKategoriId },
                    success: function (result) {
                        var altKategoriSelect = $("#altkategori");
                        altKategoriSelect.empty();
                        altKategoriSelect.append($('<option/>', {
                            value: "",
                            text: "Alt Kategori Seçiniz"
                        }));
                        result.forEach(function (item) {
                            altKategoriSelect.append($('<option/>', {
                                value: item.id,
                                text: item.adi
                            }));
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Hata oluştu: " + error);
                        alert("Kategoriler yüklenirken bir hata oluştu.");
                    }
                });
            });
        });
    </script>
}