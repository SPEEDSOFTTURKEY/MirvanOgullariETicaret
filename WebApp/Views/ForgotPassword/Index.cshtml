
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutWebUITheme.cshtml";
}

<ul class="breadcrumb">
    <li>
        <a href="@Url.Action("Index","Home")"><i class="fa fa-home"></i></a>
    </li>
    <li><a href="@Url.Action("Index","Account")">Hesabım</a></li>
    <li>
        <a href="@Url.Action("Index","ForgotPassword")">Parolamı Unuttum</a>
    </li>
</ul>
<h1 class="title page-title"><span>Parolamı Unutum?</span></h1>

<div id="account-forgotten" class="container">
    <div class="row">
        <div id="content" class="col-sm-12">
            <p>Sıfırlama bağlantısı için kayıtlı e-posta adresinizi yazınız.</p>
            <form action="https://www.tilsimbaby.com/hesap/sifremi-unuttum"
                  method="post"
                  enctype="multipart/form-data"
                  class="form-horizontal">
                <fieldset>
                    <legend>E-Posta Adresiniz</legend>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" for="input-email">E-Posta Adresiniz</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   name="email"
                                   value=""
                                   placeholder="E-Posta Adresiniz"
                                   id="input-email"
                                   class="form-control" />
                        </div>
                    </div>
                </fieldset>
                <div class="buttons clearfix">
                    <div class="pull-left">
                        <a href="@Url.Action("Index","Login")"
                           class="btn btn-default">Geri</a>
                    </div>
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary">
                            <span>Devam</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




