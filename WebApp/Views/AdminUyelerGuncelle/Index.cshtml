@{
    ViewData["Title"] = "Üye Güncelle";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .modern-wrapper {
        padding: 20px;
    }

    .modern-form-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        margin-top: 20px;
    }

        .modern-form-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .form-panel-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 20px;
    }

    .form-panel-content {
        padding: 30px;
    }

    .form-group-modern {
        margin-bottom: 25px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .control-label-modern {
        font-weight: 600;
        color: #4a5568;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: block;
    }

    .btn-group-modern {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
        margin-top: 30px;
    }

    .btn-modern-form {
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        font-size: 15px;
    }

    .btn-cancel {
        background: #718096;
        color: white;
    }

        .btn-cancel:hover {
            background: #4a5568;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(113, 128, 150, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn-save {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(72, 187, 120, 0.4);
            color: white;
        }

    .form-control-modern {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
        color: #000;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        margin-bottom: 20px;
    }

    .form-col {
        flex: 1;
        min-width: 250px;
    }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        background: #edf2ae;
        color: #718096;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .btn-address {
        background: #5b6e84;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        margin: 5px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .btn-address:hover {
            background: #4a5568;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(90, 103, 122, 0.3);
            color: white;
        }

    .modal-content-modern {
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }

    .modal-header-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .modal-title-modern {
        font-size: 18px;
        font-weight: 600;
    }

    .modal-body-modern {
        padding: 20px;
    }

    .modal-close {
        background: none;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
    }

    .textarea-modern {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
        color: #000;
        resize: vertical;
        min-height: 100px;
    }

        .textarea-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .icon-left {
        margin-right: 8px;
    }

    media (max-width: 768px) {
        .form-panel-content

    {
        padding: 20px;
    }

    .form-row {
        flex-direction: column;
        gap: 10px;
    }

    .form-col {
        min-width: 100%;
    }

    .btn-group-modern {
        flex-direction: column-reverse;
    }

    .btn-modern-form {
        width: 100%;
        justify-content: center;
    }

    .modal-dialog {
        margin: 10px;
    }

    }
</style>

<section class="modern-wrapper">
    <div class="row">
        <div class="col-md-12">
            <form class="form-horizontal" action="@Url.Action("Kaydet", "AdminUyelerGuncelle")" method="post">
                <div class="modern-form-panel">
                    <div class="form-panel-header">
                        <i class="fa fa-user-edit"></i>
                        <span>Üye Bilgisini Güncelle</span>
                    </div>
                    <div class="form-panel-content">
              
                        <input type="hidden" name="Id" value="@ViewBag.Uyeler.Id" />
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group-modern">
                                    <label class="control-label-modern">Adı</label>
                                    <input type="text" class="form-control-modern" name="Adi" placeholder="Adı" value="@ViewBag.Uyeler.Adi" />
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group-modern">
                                    <label class="control-label-modern">Soyadı</label>
                                    <input type="text" class="form-control-modern" name="Soyadi" placeholder="Soyadı" value="@ViewBag.Uyeler.Soyadi" />
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group-modern">
                                    <label class="control-label-modern">E-Mail</label>
                                    <input type="email" class="form-control-modern" name="Email" placeholder="E-Mail" value="@ViewBag.Uyeler.EMail" />
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group-modern">
                                    <label class="control-label-modern">TC Kimlik No</label>
                                    <input type="text" class="form-control-modern" name="TCKimlikNo" placeholder="TC Kimlik No" maxlength="11" value="@ViewBag.Uyeler.TCKimlikNo" />
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group-modern">
                                    <label class="control-label-modern">Telefon</label>
                                    <input type="text" class="form-control-modern" name="Telefon" placeholder="Telefon" data-mask="0(999) 999-9999" value="@ViewBag.Uyeler.Telefon" />
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group-modern">
                                    <label class="control-label-modern">Şifre</label>
                                    <input type="password" class="form-control-modern" name="Sifre" placeholder="Şifre" value="@ViewBag.Uyeler.Sifre" />
                                </div>
                            </div>
                        </div>
                        <div class="btn-group-modern">
                            <a href="@Url.Action("Index", "AdminUyeler")" class="btn-modern-form btn-cancel">
                                <i class="fa fa-arrow-left icon-left"></i>
                                <span>Geri Dön</span>
                            </a>
                            <button type="submit" class="btn-modern-form btn-save">
                                <i class="fa fa-save icon-left"></i>
                                <span>Değişiklikleri Kaydet</span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<section class="modern-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="modern-form-panel">
                <div class="form-panel-header">
                    <i class="fa fa-map-marker"></i>
                    <span>Üye Adres Bilgilerini Güncelle</span>
                </div>
                <div class="form-panel-content">
                    @if (ViewBag.Uyeler != null && ViewBag.Uyeler.UyeAdres != null && ViewBag.Uyeler.UyeAdres.Count > 0)
                    {
                        int index = 0;
                        foreach (var item in ViewBag.Uyeler.UyeAdres)
                        {
                            <a href="#myModal-@index" data-toggle="modal" class="btn-address">
                                <i class="fa fa-home"></i>
                                @item.AdresBasligi
                            </a>

                            <div aria-hidden="true" role="dialog" tabindex="-1" id="myModal-@index" class="modal fade">
                                <div class="modal-dialog">
                                    <div class="modal-content-modern">
                                        <div class="modal-header-modern">
                                            <h4 class="modal-title-modern">@item.AdresBasligi Güncelle</h4>
                                            <button data-dismiss="modal" class="modal-close">&times;</button>
                                        </div>
                                        <div class="modal-body-modern">
                                            <form class="form-horizontal" action="@Url.Action("AdresKaydet", "AdminUyelerGuncelle")" method="post">
                                                <input type="hidden" name="UyeId" value="@ViewBag.Uyeler.Id" />
                                                <input type="hidden" name="Id" value="@item.Id" />
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">Adres Başlığı</label>
                                                    <input type="text" class="form-control-modern" name="AdresBasligi" placeholder="Adres Başlığı" value="@item.AdresBasligi" />
                                                </div>
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">Adı</label>
                                                    <input type="text" class="form-control-modern" name="Adi" placeholder="Adı" value="@item.Adi" />
                                                </div>
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">Soyadı</label>
                                                    <input type="text" class="form-control-modern" name="Soyadi" placeholder="Soyadı" value="@item.Soyadi" />
                                                </div>
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">Tam Adres</label>
                                                    <textarea class="textarea-modern" name="Adres" placeholder="Tam Adres">@item.Adres</textarea>
                                                </div>
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">İl</label>
                                                    <input type="text" class="form-control-modern" name="il" placeholder="İl" value="@item.il" />
                                                </div>
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">İlçe</label>
                                                    <input type="text" class="form-control-modern" name="ilce" placeholder="İlçe" value="@item.ilce" />
                                                </div>
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">Mahalle</label>
                                                    <input type="text" class="form-control-modern" name="Mahalle" placeholder="Mahalle" value="@item.Mahalle" />
                                                </div>
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">Telefon</label>
                                                    <input type="text" class="form-control-modern" name="Telefon" placeholder="Telefon" value="@item.Telefon" />
                                                </div>
                                                <div class="form-group-modern">
                                                    <label class="control-label-modern">Fatura Türü</label>
                                                    <input type="text" class="form-control-modern" name="FaturaTuru" placeholder="Fatura Türü" value="@item.FaturaTuru" />
                                                </div>
                                                <div class="btn-group-modern">
                                                    <button type="button" data-dismiss="modal" class="btn-modern-form btn-cancel">
                                                        <i class="fa fa-times icon-left"></i>
                                                        <span>Kapat</span>
                                                    </button>
                                                    <button type="submit" class="btn-modern-form btn-save">
                                                        <i class="fa fa-save icon-left"></i>
                                                        <span>Güncelle</span>
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            index++;
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fa fa-home"></i>
                            <h4>Henüz adres eklenmemiş</h4>
                            <p>Bu üye için adres bilgisi bulunmamaktadır.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Script {
    <script>
        document.querySelector('form[action*="AdminUyelerGuncelle"]').addEventListener('submit', function (e) {
            const adi = document.querySelector('input[name="Adi"]').value;
            const soyadi = document.querySelector('input[name="Soyadi"]').value;
            const email = document.querySelector('input[name="Email"]').value;
            const tcKimlikNo = document.querySelector('input[name="TCKimlikNo"]').value;
            const telefon = document.querySelector('input[name="Telefon"]').value;

            if (!adi.trim() || !soyadi.trim() || !email.trim() || !tcKimlikNo.trim() || !telefon.trim()) {
                alert('Lütfen tüm zorunlu alanları doldurunuz.');
                e.preventDefault();
                return;
            }

            const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
            if (!emailRegex.test(email)) {
                alert('Lütfen geçerli bir e-posta adresi giriniz.');
                e.preventDefault();
                return;
            }

            if (tcKimlikNo.length !== 11 || isNaN(tcKimlikNo)) {
                alert('TC Kimlik No 11 haneli bir sayı olmalıdır.');
                e.preventDefault();
            }
        });

        let isChanged = false;
        const originalData = {
            Adi: document.querySelector('input[name="Adi"]').value,
            Soyadi: document.querySelector('input[name="Soyadi"]').value,
            Email: document.querySelector('input[name="Email"]').value,
            TCKimlikNo: document.querySelector('input[name="TCKimlikNo"]').value,
            Telefon: document.querySelector('input[name="Telefon"]').value,
            Sifre: document.querySelector('input[name="Sifre"]').value
        };

        document.querySelectorAll('input[name="Adi"], input[name="Soyadi"], input[name="Email"], input[name="TCKimlikNo"], input[name="Telefon"], input[name="Sifre"]').forEach(input => {
            input.addEventListener('input', function () {
                isChanged = document.querySelector('input[name="Adi"]').value !== originalData.Adi ||
                            document.querySelector('input[name="Soyadi"]').value !== originalData.Soyadi ||
                            document.querySelector('input[name="Email"]').value !== originalData.Email ||
                            document.querySelector('input[name="TCKimlikNo"]').value !== originalData.TCKimlikNo ||
                            document.querySelector('input[name="Telefon"]').value !== originalData.Telefon ||
                            document.querySelector('input[name="Sifre"]').value !== originalData.Sifre;
            });
        });

        window.addEventListener('beforeunload', function (e) {
            if (isChanged) {
                e.returnValue = 'Kaydedilmemiş değişiklikler var. Sayfayı terk etmek istediğinizden emin misiniz?';
            }
        });

        document.querySelector('form[action*="AdminUyelerGuncelle"]').addEventListener('submit', function () {
            isChanged = false;
        });

        document.querySelectorAll('form[action*="AdresKaydet"]').forEach(form => {
            form.addEventListener('submit', function (e) {
                const adresBasligi = form.querySelector('input[name="AdresBasligi"]').value;
                const adres = form.querySelector('textarea[name="Adres"]').value;
                if (!adresBasligi.trim() || !adres.trim()) {
                    alert('Lütfen adres başlığı ve tam adres alanlarını doldurunuz.');
                    e.preventDefault();
                }
            });
        });
    </script>
}