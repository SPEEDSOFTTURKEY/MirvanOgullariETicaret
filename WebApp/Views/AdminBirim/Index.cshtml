@{
    ViewData["Title"] = "Birim Management";
    Layout = "~/Views/Shared/_LayoutWebAdmin.cshtml";
}

<style>
    .modern-wrapper {
        padding: 20px;
    }

    .modern-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
        margin-bottom: 30px;
        margin-top: 20px;
    }

        .modern-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .panel-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        font-size: 18px;
        font-weight: 600;
        letter-spacing: 0.5px;
        position: relative;
        z-index: 10;
        display: flex;
        align-items: center;
        gap: 10px;
        margin-top: 20px;
    }

    .panel-content {
        padding: 25px;
    }

    .btn-modern {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
    }

        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .modern-table {
        margin-top: 20px;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 0 0 1px #e0e0e0;
    }

        .modern-table thead {
            background: #f8f9fa;
        }

        .modern-table th {
            padding: 15px;
            font-weight: 600;
            color: #333;
            border-bottom: 2px solid #e0e0e0;
            text-transform: uppercase;
            font-size: 12px;
            letter-spacing: 0.5px;
        }

        .modern-table td {
            padding: 15px;
            border-bottom: 1px solid #f0f0f0;
            vertical-align: middle;
        }

        .modern-table tbody tr {
            transition: background-color 0.2s ease;
        }

            .modern-table tbody tr:hover {
                background-color: #f8f9fa;
            }

    .btn-action {
        padding: 7px 14px;
        border-radius: 6px;
        border: none;
        font-size: 12px;
        font-weight: 500;
        transition: all 0.2s ease;
        margin-right: 5px;
        display: inline-flex;
        align-items: center;
        gap: 5px;
    }

    .btn-action-edit {
        background: #48bb78;
        color: white;
    }

        .btn-action-edit:hover {
            background: #38a169;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(72, 187, 120, 0.3);
        }

    .btn-action-delete {
        background: #f56565;
        color: white;
    }

        .btn-action-delete:hover {
            background: #e53e3e;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(245, 101, 101, 0.3);
        }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #718096;
    }

        .empty-state i {
            font-size: 48px;
            margin-bottom: 20px;
            color: #cbd5e0;
        }

    .modern-form-panel {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
        overflow: hidden;
        transition: box-shadow 0.3s ease;
    }

        .modern-form-panel:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .form-panel-content {
        padding: 30px;
    }

    .form-group-modern {
        margin-bottom: 25px;
        padding: 20px;
        background: #f8f9fa;
        border-radius: 8px;
    }

    .control-label-modern {
        font-weight: 600;
        color: #4a5568;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 10px;
        display: block;
    }

    .btn-group-modern {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
        margin-top: 30px;
    }

    .btn-modern-form {
        padding: 12px 25px;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
        font-size: 15px;
    }

    .btn-cancel {
        background: #718096;
        color: white;
    }

        .btn-cancel:hover {
            background: #4a5568;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(113, 128, 150, 0.3);
            color: white;
            text-decoration: none;
        }

    .btn-save {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

        .btn-save:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-update {
        background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
        color: white;
    }

        .btn-update:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(72, 187, 120, 0.4);
            color: white;
        }

    .form-control-modern {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-size: 15px;
        color: #000;
    }

        .form-control-modern:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
            outline: none;
        }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        background: #edf2ae;
        color: #718096;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 600;
        margin-bottom: 20px;
    }

    .hidden {
        display: none;
    }

    media (max-width: 768px) {
        .modern-table

    {
        font-size: 14px;
    }

    .btn-action {
        padding: 5px 10px;
        font-size: 11px;
    }

    .form-panel-content {
        padding: 20px;
    }

    .btn-group-modern {
        flex-direction: column-reverse;
    }

    .btn-modern-form {
        width: 100%;
        justify-content: center;
    }

    }
</style>

<section class="modern-wrapper">
    <!-- Birim List Section -->
    <div class="row" id="list-section">
        <div class="col-lg-12">
            <div class="modern-panel">
                <div class="panel-header">
                    <i class="fa fa-list"></i>
                    <span>Birim Bilgileri</span>
                </div>
                <div class="panel-content">
                    <div class="content-header">
                        <button class="btn-modern" onclick="showAddForm()">
                            <i class="fa fa-plus"></i>
                            <span>Yeni Birim Ekle</span>
                        </button>
                    </div>

                    @if (ViewBag.Bedenler != null && ViewBag.Bedenler.Count > 0)
                    {
                        <div class="table-container">
                            <table class="table modern-table" id="TblVeriler">
                                <thead>
                                    <tr>
                                        <th>Birim Adı</th>
                                        <th style="text-align: center;">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var beden in ViewBag.Bedenler)
                                    {
                                        <tr>
                                            <td>@beden.Adi</td>
                                            <td style="text-align: center;">
                                                <button class="btn-action btn-action-edit" onclick="showUpdateForm('@beden.Id', '@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(beden.Adi))')">
                                                    <i class="fa fa-pencil"></i>
                                                    <span>Düzenle</span>
                                                </button>
                                                <a class="btn-action btn-action-delete" href="/AdminBeden/Sil/@beden.Id"
                                                   onclick="return confirm('Bu birimi silmek istediğinizden emin misiniz?');">
                                                    <i class="fa fa-trash"></i>
                                                    <span>Sil</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fa fa-list-alt"></i>
                            <h4>Henüz birim eklenmemiş</h4>
                            <p>Yukarıdaki "Yeni Birim Ekle" butonunu kullanarak ilk biriminizi ekleyebilirsiniz.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Add Birim Form Section -->
    <div class="row hidden" id="add-form-section">
        <div class="col-md-12">
            <form class="form-horizontal" action="@Url.Action("Kaydet", "AdminBedenEkle")" method="post" id="add-form">
                <div class="modern-form-panel">
                    <div class="panel-header">
                        <i class="fa fa-plus-circle"></i>
                        <span>Yeni Birim Ekle</span>
                    </div>
                    <div class="form-panel-content">
                        <div class="form-group-modern">
                            <label class="control-label-modern">Birim Adı</label>
                            <input type="text" name="Adi" class="form-control-modern" />
                        </div>

                        <div class="btn-group-modern">
                            <button type="button" class="btn-modern-form btn-cancel" onclick="showList()">
                                <i class="fa fa-times icon-left"></i>
                                <span>İptal</span>
                            </button>
                            <button type="submit" class="btn-modern-form btn-save">
                                <i class="fa fa-check icon-left"></i>
                                <span>Kaydet</span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Update Birim Form Section -->
    <div class="row hidden" id="update-form-section">
        <div class="col-md-12">
            <form class="form-horizontal" action="@Url.Action("Kaydet", "AdminBedenGuncelle")" method="post" id="update-form">
                <div class="modern-form-panel">
                    <div class="panel-header">
                        <i class="fa fa-edit"></i>
                        <span>Birim Güncelle</span>
                    </div>
                    <div class="form-panel-content">
              
                        <div class="form-group-modern">
                            <label class="control-label-modern">Birim Adı</label>
                            <input type="hidden" name="Id" id="update-id" />
                            <input type="text" name="Adi" id="update-name" class="form-control-modern" />
                        </div>
                        <div class="btn-group-modern">
                            <button type="button" class="btn-modern-form btn-cancel" onclick="showList()">
                                <i class="fa fa-arrow-left icon-left"></i>
                                <span>Geri Dön</span>
                            </button>
                            <button type="submit" class="btn-modern-form btn-update">
                                <i class="fa fa-save icon-left"></i>
                                <span>Değişiklikleri Kaydet</span>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

<script>
    // Section toggling
    function showList() {
        document.getElementById('list-section').classList.remove('hidden');
        document.getElementById('add-form-section').classList.add('hidden');
        document.getElementById('update-form-section').classList.add('hidden');
        resetForms();
    }

    function showAddForm() {
        document.getElementById('list-section').classList.add('hidden');
        document.getElementById('add-form-section').classList.remove('hidden');
        document.getElementById('update-form-section').classList.add('hidden');
        resetForms();
    }

    function showUpdateForm(id, name) {
        document.getElementById('list-section').classList.add('hidden');
        document.getElementById('add-form-section').classList.add('hidden');
        document.getElementById('update-form-section').classList.remove('hidden');

        document.getElementById('update-id').value = id;
        document.getElementById('update-id-display').textContent = id;
        document.getElementById('update-name').value = name;
    }

    // Reset forms
    function resetForms() {
        document.getElementById('add-form').reset();
        document.getElementById('update-form').reset();
    }

    // DataTable initialization and form validation
    $(document).ready(function () {
        if ($.fn.DataTable && $('#TblVeriler').length > 0) {
            $('#TblVeriler').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                },
                "pageLength": 10,
                "order": [[0, "asc"]]
            });
        }

        // Form validation for add form
        document.getElementById('add-form').addEventListener('submit', function (e) {
            const adi = document.querySelector('#add-form input[name="Adi"]').value;
            if (!adi.trim()) {
                alert('Lütfen beden adı giriniz.');
                e.preventDefault();
            }
        });

        // Form validation and unsaved changes warning for update form
        document.getElementById('update-form').addEventListener('submit', function (e) {
            const adi = document.querySelector('#update-form input[name="Adi"]').value;
            if (!adi.trim()) {
                alert('Lütfen beden adı giriniz.');
                e.preventDefault();
            }
        });

        let isChanged = false;
        let originalName = '';
        document.getElementById('update-name').addEventListener('input', function () {
            isChanged = this.value !== originalName;
        });

        window.addEventListener('beforeunload', function (e) {
            if (isChanged) {
                e.returnValue = 'Kaydedilmemiş değişiklikler var. Sayfayı terk etmek istediğinizden emin misiniz?';
            }
        });

        document.getElementById('update-form').addEventListener('submit', function () {
            isChanged = false;
        });

        // Set original name when showing update form
        document.querySelectorAll('.btn-action-edit').forEach(button => {
            button.addEventListener('click', function () {
                originalName = document.getElementById('update-name').value;
            });
        });
    });
</script>
